<div class="brief">
    {{name}}<span class="fa fa-caret-up"></span><span class="fa fa-caret-down"></span>
</div>
<div class="details">
    <div class="type-property">
        {{configType}}
    </div>
    <ul>
        {{#each fields}}
            <li>
                <div class="field-name">
                    {{name}}
                </div>
                <div class="field-value">
                    {{value}}
                </div>
            </li>
        {{/each}}
    </ul>
    <div class="delete-container">
        <button class="is-negative delete-config">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>
