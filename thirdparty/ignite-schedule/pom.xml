<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>thirdparty</artifactId>
        <groupId>ddf.thirdparty</groupId>
        <version>2.12.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>ddf.thirdparty</groupId>
    <artifactId>ignite-schedule</artifactId>
    <version>2.12.0-SNAPSHOT</version>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.ignite</groupId>
                            <artifactId>ignite-schedule</artifactId>
                            <version>${ignite.version}</version>

                            <file>${project.basedir}/src/main/resources/ignite-schedule-2.3.0.jar</file>
                            <sources>${project.basedir}/src/main/resources/ignite-schedule-2.3.0-sources.jar</sources>
                            <javadoc>${project.basedir}/src/main/resources/ignite-schedule-2.3.0-javadoc.jar</javadoc>
                            <pomFile>${project.basedir}/src/main/resources/ignite-schedule-2.3.0.pom</pomFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>