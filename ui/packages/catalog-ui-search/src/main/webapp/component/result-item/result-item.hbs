<div class="result-container {{#if hasError}}has-validation-issues{{/if}} {{#if hasWarning}}has-validation-issues{{/if}}" data-metacard-id="{{id}}" data-index="{{index}}"
     data-query-id="{{metacard.queryId}}">
    <div class="container-indicator">
    </div>
    <div class="container-content">
        <div class="content-header">
            <span class="header-icon fa fa-history" title="Type: Revision" data-help="Indicates the type of result
            (workspace, resource, history, deleted)"></span>
            <span class="header-icon fa fa-book" title="Type: Workspace" data-help="Indicates the type of result
            (workspace, resource, history, deleted)"></span>
            <span class="header-icon fa fa-file" title="Type: Resource" data-help="Indicates the type of result
            (workspace, resource, history, deleted)"></span>
            <span class="header-icon fa fa-trash" title="Type: Deleted" data-help="Indicates the type of result
            (workspace, resource, history, deleted)"></span>

            <span class="header-icon result-icon {{icon}}" title="Type: Resource" data-help="Indicates the type of result
            (workspace, resource, history, deleted)"></span>
            <span class="header-title" data-help="{{getAlias 'title'}}" title="{{getAlias 'title'}}: {{metacard.properties.title}}">
                {{metacard.properties.title}}
            </span>
        </div>
        <div class="content-body">
            {{#if metacard.properties.thumbnail}}
                <div class="detail-thumbnail details-property" data-help="{{getAlias 'thumbnail'}}">
                </div>
            {{/if}}
            {{#each customDetail}}
                <div class="detail-custom details-property" data-help="{{getAlias this.label}}" title="{{getAlias this.label}}: {{this.value}}">
                    <span>
                    {{this.value}}
                    </span>
                </div>
            {{/each}}
            {{#if showRelevanceScore}}
                <div class="detail-custom details-property" data-help="Relevance: {{relevance}}" title="Relevance: {{relevance}}">
                    <span>
                    {{roundedRelevance}}
                    </span>
                </div>
            {{/if}}
            {{#if showSource}}
                <div class="detail-source details-property" title="{{getAlias 'source'}}: {{metacard.properties.source-id}}" data-help="{{getAlias 'source'}}">
                    {{#if local}}
                        <span class="fa source-icon fa-home">
                        </span>
                        <span>local</span>
                    {{else}}
                        <span class="fa source-icon fa-cloud">
                        </span>
                        <span>
                            {{metacard.properties.source-id}}
                        </span>
                    {{/if}}
                </div>
            {{/if}}
        </div>
        <div class="content-footer">
            <div class="result-validation">
                {{#if hasError}}
                    <span class="fa fa-exclamation-triangle resultError" title="Has validation errors." data-help="Indicates the given result has a validation error.
                    See the 'Quality' tab of the result for more details.">
                    </span>
                {{else if hasWarning}}
                    <span class="fa fa-exclamation-triangle resultWarning" title="Has validation warnings." data-help="Indicates the given result has a validation warning.
                    See the 'Quality' tab of the result for more details.">
                    </span>
                {{/if}}
            </div>
            <button class="result-stream is-button is-neutral" title="Streams the associated product in a new window" data-help="Streams the associated product in a new window">
                <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                    viewBox="0 0 20 20" style="width: 60%; height: 60%;" xml:space="preserve">
                <g>
                    <polygon class="result-stream-svg" points="0,20.7 18.7,20.7 18.7,11.3 9.3,11.3 9.3,2 0,2 	"/>
                    <rect x="11.3" class="result-stream-svg" width="9.3" height="9.3"/>
                </g>
                </svg>
            </button>
            <button class="result-wm is-button is-neutral" title="Overlay Tile Layer Onto Map" data-help="Overlay Tile Layer Onto Map">
                <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                    width="60%" height="60%" viewBox="0 0 54.849 54.849" style="enable-background:new 0 0 54.849 54.849;"
                    xml:space="preserve">
                    <g>
                        <g>
                            <g>
                                <path d="M54.497,39.614l-10.363-4.49l-14.917,5.968c-0.537,0.214-1.165,0.319-1.793,0.319c-0.627,0-1.254-0.104-1.79-0.318
                                    l-14.921-5.968L0.351,39.614c-0.472,0.203-0.467,0.524,0.01,0.716L26.56,50.81c0.477,0.191,1.251,0.191,1.729,0L54.488,40.33
                                    C54.964,40.139,54.969,39.817,54.497,39.614z"/>
                                <path d="M54.497,27.512l-10.364-4.491l-14.916,5.966c-0.536,0.215-1.165,0.321-1.792,0.321c-0.628,0-1.256-0.106-1.793-0.321
                                    l-14.918-5.966L0.351,27.512c-0.472,0.203-0.467,0.523,0.01,0.716L26.56,38.706c0.477,0.19,1.251,0.19,1.729,0l26.199-10.479
                                    C54.964,28.036,54.969,27.716,54.497,27.512z"/>
                                <path d="M0.361,16.125l13.662,5.465l12.537,5.015c0.477,0.191,1.251,0.191,1.729,0l12.541-5.016l13.658-5.463
                                    c0.477-0.191,0.48-0.511,0.01-0.716L28.277,4.048c-0.471-0.204-1.236-0.204-1.708,0L0.351,15.41
                                    C-0.121,15.614-0.116,15.935,0.361,16.125z"/>
                            </g>
                        </g>
                    </g>
                </svg>
            </button>

            <button class="result-download fa fa-download is-button is-neutral" title="Downloads the results associated product directly to your machine." data-help="Downloads
            the results associated product directly to your machine.">
            </button>
            <div class="result-add is-button is-neutral composed-button" title="Add or remove the result from a list, or make a new list with this result." data-help="Add or remove the result from a list, or make a new list with this result.">
            </div>
            <div class="result-actions is-button" title="Provides a list of actions to take on the result." data-help="Provides a list
            of actions to take on the result.">
        </div>
    </div>
</div>
